{
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "overrides": [
        {
            "files": ["*.php"],
            "options": {
                "braceStyle": "psr-2",
                "phpVersion": "7.4",
                "trailingCommaPHP": true
            }
        },
        {
            "files": ["*.js"],
            "options": {
                "arrowParens": "always"
            }
        },
        {
            "files": ["*.twig"],
            "options": {
                "twigAlwaysBreakObjects": false,
                "twigFollowOfficialCodingStandards": true,
                "twigOutputEndblockName": true,
                "twigSingleQuote": true
            }
        },
        {
            "files": "*.json",
            "options": {
                "trailingComma": "none"
            }
        }
    ],
    "plugins": ["./node_modules/prettier-plugin-twig-melody"],
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
}
