{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<div class="programs main">
		{% block header %}
			<div class="header">
				<h1>Liste des séries disponibles:</h1>
				<hr/>
			</div>
		{% endblock %}
		{#TODO Twig: boucler avec for #}
		{% for program in programs %}
			<div>
				{#TODO Twig: afficher l'index de la boucle #}
				<a href="{{path('programs_show', {program: program.id})}}">
					<h2>
						{{ loop.index }}
						/
						{{ program.title }}
						- Catégorie :
						{{ program.category.name }}
					</h2>
				</a>
				<p class="pl-4">{{ program.summary }}</p>
			</div>
		{% else %}
			Aucune série trouvée.
		{% endfor %}
	</div>
{% endblock %}
