{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<div class="programs">
		{% block header %}
			<h1>Toutes les séries de la table program :</h1>
			<hr/>
		{% endblock %}
		{#TODO Twig: boucler avec for #}
		{% for program in programs %}
			<div>
				{#TODO Twig: afficher l'index de la boucle #}
				<a href="{{path('program_show', {id: program.id})}}">
					<h2>
						{{ loop.index }}
						/
						{{ program.title }}
						- Catégorie :
						{{ program.category.name }}</a>
				</h2>
				<p>{{ program.summary }}</p>
			</div>
		{% else %}
			Aucune série trouvée.
		{% endfor %}
