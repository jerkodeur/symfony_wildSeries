{# templates/security/login.html.twig #}
{% extends '_base.html.twig' %}

{% block localTitle %}
	Connexion
{% endblock localTitle %}

{% block title %}
	Nouvelle connexion
{% endblock title %}

{% block content %}
	<div class="programs">
		{% if error %}
			<div class="alert-box mb-1">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form method="post">
			{# Email #}
			<label for="inputEmail">Email</label>
			<div class="input-group mb-3">
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
			</div>

			{# Password #}
			<label for="inputPassword">Password</label>
			<div class="input-group mb-4">
				<input type="password" name="password" id="inputPassword" class="form-control" required>
			</div>

			{# Token #}
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{# Remember me #}
			<div class="input-group mb-3">
				<label>
					<input type="checkbox" name="_remember_me">
					Se souvenir de moi
				</label>
			</div>

			<button class="btn btn-dark mb-2" type="submit">
				Se connecter
			</button>
		</form>
		{# Link to homepage #}
		<div class='form-group w-50 m-auto pt-2'>
			<a href="{{ path('homepage') }}" class="brown">Retour Ã  l'accueil</a>
		</div>
	</div>
{% endblock content %}
